
@{
	ViewBag.Title = "Index";
	Layout = null /*"~/Views/Shared/_Layout.cshtml"*/;
}
<head>
	<link href="~/Content/styles/bootstrap.min.css" rel="stylesheet" />
	<link href="~/Content/styles/login.css" rel="stylesheet" />
</head>
<body>
			<div class="login-fondo">
				<form class="login text-center" action="/" method="post">
					<img class="mb-4" src="~/Content/images/login/favicon2.png" alt="" width="220" height="72">
					<h1 class="h3 mb-3 font-weight-normal">Inicio de sesión</h1>
					<label for="email" class="sr-only">Usuario / Contraseña</label>
				
					<input type="email" id="email" class="form-control" placeholder="Usuario / Correo" required autofocus>
					<br />
					<label for="Password" class="sr-only">Contraseña</label>
					<input type="password" id="Password" class="form-control" placeholder="Contraseña" required>
					<div class="checkbox mb-3">
						<label>
							<input class="recordar" type="checkbox" value="remember-me"> Recordar
						</label>
					</div>
					<button class="btn btn-lg btn-success btn-block" type="submit">Ingresar</button>
					<p class="text-muted">&copy; VR Soluciones Tecnologicas</p>
				</form>
			</div>
		<script src="~/Scripts/bootstrap.min.js"></script>
		<script src="~/Scripts/jquery-3.0.0.min.js"></script>

</body>
