    <div id="modal-nuevo" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" data-dismiss="modal" aria-hidden="true" class="close">
                        &times;
                    </button>
                    <h4 class="modal-title">
                        Nueva Unidad
                    </h4>
                </div>
                <div class="modal-body">
                    <div class="form-body pal">
                        <div class="form-group">
                            <input id="NombreUnidad" name="NombreUnidad" type="text" placeholder="Ingrese Nombre Unidad" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input  onkeypress="return soloNumeros(event)" id="FactorUnidad" name="FactorUnidad" type="text" placeholder="Ingrese Número Factor de Unidad" class="form-control" />
