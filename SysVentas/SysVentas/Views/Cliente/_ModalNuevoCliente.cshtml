	<!--Inicio Modal Nueva Cliente-->
<div id="modalNuevoCliente" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" data-dismiss="modal" aria-hidden="true" class="close">
                    &times;
                </button>
                <h4 class="modal-title">
                    Nueva Cliente
                </h4>
            </div>
            <div class="modal-body">
                <div class="form-body pal row">
                    <div class="form-group col-md-12">
                        <select class="form-control" id="IdTipoPersona">
                            @foreach (var lsTipoPersona in Model)
                            {
                                <option id="IdTipoPersona" name="IdTipoPersona" value="@lsTipoPersona.IdTipoPersona">@lsTipoPersona.NombreTipoPersona</option>
                            }
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <input id="NroDocumentoCliente" name="NroDocumentoCliente" type="text" placeholder="Ingrese el DNI del cliente" class="form-control" autocomplete="off" />
                    </div>
                    <div class="form-group col-md-6">
                        <input id="NombreCliente" name="NombreCliente" type="text" placeholder="Ingrese Nombre Cliente" class="form-control" autocomplete="off" />
                    </div>
                    <div class="form-group col-md-6">
                        <input id="DireccionCliente" name="DireccionCliente" type="text" placeholder="Ingrese la dirección del cliente" class="form-control" autocomplete="off" />
                    </div>
                    <div class="form-group col-md-6">
                        <input id="NumeroContactoCliente" name="NumeroContactoCliente" type="text" placeholder="Ingrese el numero de telefono" class="form-control" autocomplete="off" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="CerrarPopUpNuevoCliente" data-dismiss="modal" class="btn btn-danger">
                    Cancelar
                </button>
                <button type="button" onclick="agregarCliente()" class="btn btn-primary">
                    Guardar
                </button>
            </div>
        </div>
    </div>
</div>
<!--Fin Modal Nueva Cliente-->
