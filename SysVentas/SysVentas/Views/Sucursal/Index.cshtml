@using Entidad
@model List<TipoTiendaCLS>
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="title-breadcrumb-option-demo" class="page-title-breadcrumb">
	<div class="page-header pull-left">
		<div class="page-title">
			Sucursal
		</div>
	</div>
	<ol class="breadcrumb page-breadcrumb pull-right">
		<li><i class="fa fa-home"></i>&nbsp;<a href="dashboard.html">Inicio</a>&nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;</li>
		<li class="hidden"><a href="#">Sucursal</a>&nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;</li>
		<li class="active">Sucursal</li>
	</ol>
	<div class="clearfix">
	</div>
</div>
<div class="page-content">
	<div class="nav nav-tabs responsive">
		<div class="panel panel-grey">
			<div class="panel-heading" id="newbotton">
				<div class="col-sm-6 col-md-8">Listado de Sucursales</div>
				<div class="col-sm-3 col-md-2">
					<a href="#" role="button" onclick="abrirFiltros();" data-target="" class="btn btn-info btn-sm btn-block">Filtro</a>
				</div>
				<div class="col-sm-3 col-md-2">
					<button type="button" class="btn btn-danger btn-sm btn-block" data-toggle="modal" data-target="#modal-nuevo">
						Nuevo
					</button>
				</div>

			</div>
			<div class="panel-body">
				<table id="tbSucursal" class="table table-hover table-bordered">
					<thead>
						<tr>
							<th>#</th>
							<th>Nombre Sucursal</th>
							<th>Sucursal</th>
							<th>Fecha Creación</th>
							<th>Usuario</th>
							<th>Estado</th>
							<th>Acción</th>
						</tr>
					</thead>
					<tbody id="bodytbSucursal">
						<tr>
							<td colspan="7">Seleccione filtros para realizar una búsqueda</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>


	<!--Inicio Modal Nueva Sucursal-->
	<div id="modal-nuevo" class="modal fade">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" data-dismiss="modal" aria-hidden="true" class="close">
						&times;
					</button>
					<h4 class="modal-title">
						Nueva Sucursal
					</h4>
				</div>
				<div class="modal-body">
					<div class="form-body pal">
						<div class="form-group">
							<input id="NombreSucursal" name="NombreSucursal" type="text" placeholder="Ingrese Nombre Sucursal" class="form-control" />
						</div>
						<div class="form-group">
							<input onkeypress="return soloNumeros(event)" id="FactorSucursal" name="FactorSucursal" type="text" placeholder="Ingrese el ID de de Sucursal" class="form-control" />
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" id="CerrarPopUpSucursal" data-dismiss="modal" class="btn btn-danger">
						Cancelar
					</button>
					<button type="button" onclick="agregarSucursal()" class="btn btn-primary">
						Guardar
					</button>
				</div>
			</div>
		</div>
	</div>
	<!--Fin Modal Nueva Sucursal-->
	<!--Inicio Modal Filtros-->
	<div id="modalFiltros" class="modal fade">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" data-dismiss="modal" aria-hidden="true" class="close">
						&times;
					</button>
					<h4 class="modal-title">
						Filtros
					</h4>
				</div>
				<div class="modal-body">
					<div class="form-body pal">
						<div class="form-group">
							<input id="NombreSucursalFiltro" name="NombreSucursalFiltro" type="text" placeholder="Ingrese Nombre Sucursal" class="form-control" />
						</div>
						<div class="form-group">
							<div class="radio-container">
								<input type="radio" name="estado" id="todos" checked value="2" />
								<label for="todos">Todos los Estados</label>
								<input type="radio" name="estado" id="activos" value="1" />
								<label for="activos">Estado Activado</label>
								<input type="radio" name="estado" id="inactivos" value="0" />
								<label for="inactivos">Estado Desactivado</label>
							</div>
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" id="CerrarPopUpFiltros" data-dismiss="modal" class="btn btn-danger">
						Cancelar
					</button>
					<button type="button" onclick="cargarTablaSucursales()" class="btn btn-primary">
						Filtrar
					</button>
				</div>
			</div>
		</div>
	</div>
	<!--Fin Modal Filtros-->
	<!--Inicio Modal Editar-->
	<div id="modalEditar" class="modal fade">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" data-dismiss="modal" aria-hidden="true" class="close">
						&times;
					</button>
					<h4 class="modal-title">
						Editar Sucursal
					</h4>
				</div>
				<div class="modal-body">
					<div class="form-body pal">
						<div class="form-group">
							<input id="idSucursalEditar" name="idSucursalEditar" type="hidden" placeholder="Ingrese Nombre Sucursal" class="form-control" />
							<input id="NombreSucursalEditar" name="NombreSucursalEditar" type="text" placeholder="Ingrese Nombre Sucursal" class="form-control" />
						</div>
						<div class="form-group">
							<input onkeypress="return soloNumeros(event)" id="FactorSucursalEditar" name="FactorSucursalEditar" type="text" placeholder="Ingrese Número Factor de Sucursal" class="form-control" />
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" id="CerrarPopUpSucursal" data-dismiss="modal" class="btn btn-danger">
						Cancelar
					</button>
					<button type="button" onclick="editarSucursal()" class="btn btn-primary">
						Guardar
					</button>
				</div>
			</div>
		</div>
	</div>
	<!--Fin Modal Editar-->

</div>

<script src="~/Content/script/Páginas/Sucursal.js"></script>

<style>
	/*Radio Buttons*/
	.radio-container {
		font-size: 20px;
		padding: 8px;
	}

	input[type="radio"] {
		display: none;
	}

	label {
		color: #808080;
		background: rgba(0,0,0,.1);
		padding: 5px 15px 5px 36px;
		display: inline-block;
		position: relative;
		font-size: 12px;
		border-radius: 3px;
		cursor: pointer;
		-moz-transition: all 0.3s ease;
		-o-transition: all 0.3s ease;
		-webkit-transition: all 0.3s ease;
		transition: all 0.3s ease;
	}

		label:hover {
			background: rgba(0,116,217, 0.2);
		}

		label:before {
			content: "";
			width: 12px;
			height: 12px;
			display: inline-block;
			background: none;
			border: 3px solid #808080;
			border-radius: 50%;
			position: absolute;
			left: 12px;
			top: 8px;
		}

	input[type="radio"]:checked + label {
		padding: 5px 15px;
		background: #808080;
		border-radius: 2px;
		color: #fff;
	}

		input[type="radio"]:checked + label:before {
			display: none;
		}

	/*Radio Buttons*/
</style>