<!--Inicio Modal Editar-->
<div id="modalEditarSucursal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" data-dismiss="modal" aria-hidden="true" class="close">
                    &times;
                </button>
                <h4 class="modal-title">
                    Editar Sucursal
                </h4>
            </div>
            <div class="modal-body">
                <div class="form-body pal">
                    <div class="form-group">
                        <input id="idSucursalEditar" name="idSucursalEditar" type="hidden" placeholder="Ingrese Nombre Sucursal" class="form-control" />
                        <input id="NombreSucursalEditar" name="NombreSucursalEditar" type="text" placeholder="Ingrese Nombre Sucursal" class="form-control"  autocomplete="off"/>
                    </div>
                    <div class="form-group">
                        <select class="form-control" id="IdTipoTiendaEditar">
                            @foreach (var lsTipoTienda in Model)
                            {
                                <option id="IdTipoTiendaEditar" name="IdTipoTienda" value="@lsTipoTienda.IdTipoTienda">@lsTipoTienda.NombreTipoTienda</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="CerrarPopUpEditarSucursal" data-dismiss="modal" class="btn btn-danger">
                    Cancelar
                </button>
                <button type="button" onclick="editarSucursal()" class="btn btn-primary">
                    Guardar
                </button>
            </div>
        </div>
    </div>
</div>
<!--Fin Modal Editar-->
