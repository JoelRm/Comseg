<!--Inicio Modal Nueva Sucursal-->
<div id="modalNuevaSucursal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" data-dismiss="modal" aria-hidden="true" class="close">
                    &times;
                </button>
                <h4 class="modal-title">
                    Nueva Sucursal
                </h4>
            </div>
            <div class="modal-body">
                <div class="form-body pal">
                    <div class="form-group">
                        <input id="NombreSucursal" name="NombreSucursal" type="text" placeholder="Ingrese Nombre Sucursal" class="form-control"  autocomplete="off"/>
                    </div>
                    <div class="form-group">
                        <select class="form-control" id="IdTipoTienda">
                            @foreach (var lsTipoTienda in Model)
                            {
                                <option id="IdTipoTienda" name="IdTipoTienda" value="@lsTipoTienda.IdTipoTienda">@lsTipoTienda.NombreTipoTienda</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="CerrarPopUpNuevaSucursal" data-dismiss="modal" class="btn btn-danger">
                    Cancelar
                </button>
                <button type="button" onclick="agregarSucursal()" class="btn btn-primary">
                    Guardar
                </button>
            </div>
        </div>
    </div>
</div>
<!--Fin Modal Nueva Sucursal-->
