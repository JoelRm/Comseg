
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="title-breadcrumb-option-demo" class="page-title-breadcrumb">
    <div class="page-header pull-left">
        <div class="page-title">
            Tipo de Persona
        </div>
    </div>
    <ol class="breadcrumb page-breadcrumb pull-right">
        <li><i class="fa fa-home"></i>&nbsp;<a href="dashboard.html">Inicio</a>&nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;</li>
        <li class="hidden"><a href="#">Tipo de Persona</a>&nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;</li>
        <li class="active">Tipo de Persona</li>
    </ol>
    <div class="clearfix">
    </div>
</div>
<div class="page-content">
    <div class="nav nav-tabs responsive">
        <div class="panel panel-grey">
            <div class="panel-heading" id="newbotton">
                <div class="col-sm-8 col-md-8">Listado de Tipo de Persona</div>
                <div class="col-sm-4 col-md-4">
                    <button type="button" class="btn btn-danger btn-sm btn-block" data-toggle="modal" data-target="#modalnuevoTipoPersona">
                        Nuevo
                    </button>
                </div>

            </div>
            <div class="panel-body">

                <div class="form-group row" style="margin-left:0px; margin-right:0px;">
                    <input id="NombreTipoPersonaFiltro" name="NombreTipoPersonaFiltro" type="text" placeholder="Buscar Tipo Persona" class="busqueda col-md-4 col-sm-4" autocomplete="off"/>

                    <div class="radio-container radio-edit">
                        <input type="radio" name="estado" id="todos" checked value="2" />
                        <label for="todos">Todos los Estados</label>
                        <input type="radio" name="estado" id="activos" value="1" />
                        <label for="activos">Estado Activado</label>
                        <input type="radio" name="estado" id="inactivos" value="0" />
                        <label for="inactivos">Estado Desactivado</label>
                    </div>
                    <button type="button" onclick="cargarTablaTipoPersona()" class="btn btn-primary botonbusqueda">
                        Buscar Tipo Persona
                    </button>
                </div>

                <table id="tbTipoPersona" class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Nombre Tipo de Persona</th>
                            <th>Fecha Creación</th>
                            <th>Usuario</th>
                            <th>Estado</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    <tbody id="bodytbTipoPersona">
                        <tr>
                            <td colspan="7">Seleccione filtros para realizar una búsqueda</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_ModalNuevoTipoPersona");
@Html.Partial("_ModalEditarTipoPersona");

<script src="~/Content/script/Page/TipoPersona.js"></script>

<style>
    /*Radio Buttons*/
    .radio-container {
        font-size: 20px;
        padding: 8px;
    }

    input[type="radio"] {
        display: none;
    }

    label {
        color: #808080;
        background: rgba(0,0,0,.1);
        padding: 5px 15px 5px 36px;
        display: inline-block;
        position: relative;
        font-size: 12px;
        border-radius: 3px;
        cursor: pointer;
        -moz-transition: all 0.3s ease;
        -o-transition: all 0.3s ease;
        -webkit-transition: all 0.3s ease;
        transition: all 0.3s ease;
    }

        label:hover {
            background: rgba(0,116,217, 0.2);
        }

        label:before {
            content: "";
            width: 12px;
            height: 12px;
            display: inline-block;
            background: none;
            border: 3px solid #808080;
            border-radius: 50%;
            position: absolute;
            left: 12px;
            top: 8px;
        }

    input[type="radio"]:checked + label {
        padding: 5px 15px;
        background: #808080;
        border-radius: 2px;
        color: #fff;
    }

        input[type="radio"]:checked + label:before {
            display: none;
        }

    /*Radio Buttons*/
</style>
