<style>
    /*Radio Buttons*/
    .radio-container {
        font-size: 20px;
        padding: 8px;
    }

    input[type="radio"] {
        display: none;
    }

    label {
        color: #808080;
        background: rgba(0,0,0,.1);
        padding: 5px 15px 5px 36px;
        display: inline-block;
        position: relative;
        font-size: 12px;
        border-radius: 3px;
        cursor: pointer;
        -moz-transition: all 0.3s ease;
        -o-transition: all 0.3s ease;
        -webkit-transition: all 0.3s ease;
        transition: all 0.3s ease;
    }

        label:hover {
            background: rgba(0,116,217, 0.2);
        }

        label:before {
            content: "";
            width: 12px;
            height: 12px;
            display: inline-block;
            background: none;
            border: 3px solid #808080;
            border-radius: 50%;
            position: absolute;
            left: 12px;
            top: 8px;
        }

    input[type="radio"]:checked + label {
        padding: 5px 15px;
        background: #808080;
        border-radius: 2px;
        color: #fff;
    }

        input[type="radio"]:checked + label:before {
            display: none;
        }

    /*Radio Buttons*/
</style>
