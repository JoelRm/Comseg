<style>
.divPredictivo {
    min-width: 89%;
    position: absolute;
    text-align: left;
    display: none;
    z-index:1001;
}
.divPredictivo .divPredictivob {
    border: none;
    border-radius: 24px;
    border-top-left-radius: 0;
    border-top-right-radius: 0;
    box-shadow: 0 4px 6px 0 rgba(32,33,36,.28);   
}

.divPredictivoa {
    border-radius: 24px;
    border-top-left-radius: 0;
    border-top-right-radius: 0;
    overflow: hidden;
    padding-bottom: 4px;
    background: #fff;
}
.ulPredictivo{
    list-style-type: none;
    margin: 0;
    padding: 0;
}
.liPredictivo{
    text-align: left;
    padding: 0;
}

.liPredictivo .lidivPredictivo{
    cursor:pointer;
    padding: 1px 12px;
    font-size: 14px;
    line-height: 1.42857143;
}
.lidivPredictivo:hover{
    background: Gray;
}
</style>

<script>
    function buscarLinea() {
        var txt = $("#lineaProdNuevo").val();
        if (txt.length >= 3) {
            document.getElementById("divPredictivo").style.display = "block";
